{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Calcpad Settings Schema",
  "type": "object",
  "properties": {
    "math": {
      "type": "object",
      "description": "Mathematical calculation settings",
      "properties": {
        "decimals": {
          "type": "integer",
          "description": "Number of decimal places to display",
          "default": 6,
          "minimum": 0,
          "maximum": 15
        },
        "degrees": {
          "type": "integer", 
          "description": "Angle unit system (0=degrees, 1=radians, 2=gradians)",
          "default": 0,
          "enum": [0, 1, 2]
        },
        "isComplex": {
          "type": "boolean",
          "description": "Enable complex number calculations",
          "default": false
        },
        "substitute": {
          "type": "boolean",
          "description": "Show variable substitution in output",
          "default": true
        },
        "formatEquations": {
          "type": "boolean",
          "description": "Format mathematical equations",
          "default": true
        }
      }
    },
    "plot": {
      "type": "object",
      "description": "Plotting and visualization settings",
      "properties": {
        "isAdaptive": {
          "type": "boolean",
          "description": "Use adaptive plotting algorithms",
          "default": true
        },
        "screenScaleFactor": {
          "type": "number",
          "description": "Scale factor for high-DPI displays",
          "default": 2,
          "minimum": 0.5,
          "maximum": 4.0
        },
        "imagePath": {
          "type": "string",
          "description": "Custom path for generated images",
          "default": ""
        },
        "imageUri": {
          "type": "string",
          "description": "Custom URI for image references", 
          "default": ""
        },
        "vectorGraphics": {
          "type": "boolean",
          "description": "Use vector graphics instead of raster",
          "default": false
        },
        "colorScale": {
          "type": "string",
          "description": "Color scale for plots and maps",
          "default": "Rainbow",
          "enum": ["Rainbow", "Grayscale", "Hot", "Cool", "Jet", "Parula"]
        },
        "smoothScale": {
          "type": "boolean",
          "description": "Use smooth color transitions",
          "default": false
        },
        "shadows": {
          "type": "boolean",
          "description": "Enable shadows in 3D plots",
          "default": true
        },
        "lightDirection": {
          "type": "string",
          "description": "3D lighting direction",
          "default": "NorthWest",
          "enum": ["North", "NorthEast", "East", "SouthEast", "South", "SouthWest", "West", "NorthWest"]
        }
      }
    },
    "auth": {
      "type": "object",
      "description": "Authentication settings for S3 storage access",
      "properties": {
        "loginUrl": {
          "type": "string",
          "description": "Login URL accessible from host network",
          "default": ""
        },
        "storageUrl": {
          "type": "string",
          "description": "Storage URL accessible from Docker network",
          "default": ""
        },
        "username": {
          "type": "string",
          "description": "Username for authentication",
          "default": ""
        },
        "password": {
          "type": "string",
          "description": "Password for authentication",
          "default": ""
        }
      }
    },
    "units": {
      "type": "string",
      "description": "Default unit system (m=metric, i=imperial, u=US)",
      "default": "m",
      "enum": ["m", "i", "u"]
    },
    "output": {
      "type": "object",
      "description": "Output formatting options",
      "properties": {
        "format": {
          "type": "string",
          "description": "Output format",
          "default": "html",
          "enum": ["html", "pdf", "docx"]
        },
        "silent": {
          "type": "boolean",
          "description": "Silent mode - don't auto-open files",
          "default": true
        }
      }
    }
  },
  "additionalProperties": false
}