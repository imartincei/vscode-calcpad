{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/CalcpadVuePanel/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/CalcpadVuePanel/**/*.ts",
    "src/CalcpadVuePanel/**/*.vue",
    "src/CalcpadVuePanel/env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "src/webview",
    "src/extension.ts",
    "src/calcpad*.ts"
  ]
}