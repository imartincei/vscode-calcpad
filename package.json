{
  "name": "vscode-calcpad",
  "displayName": "VS Code CalcPad",
  "description": "Calculator extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:calcpad"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "calcpad",
        "aliases": ["CalcPad", "calcpad"],
        "extensions": [".cpd", ".cpdz"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "vscode-calcpad.activate",
        "title": "Activate CalcPad"
      },
      {
        "command": "vscode-calcpad.previewHtml",
        "title": "CalcPad Preview",
        "icon": "$(preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-calcpad.previewHtml",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CalcPad",
      "properties": {
        "calcpad.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:9420",
          "description": "Base URL for the CalcPad API server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
