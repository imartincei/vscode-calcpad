{
  "name": "vscode-calcpad",
  "displayName": "VS Code CalcPad",
  "description": "Calculator extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "calcpad",
        "aliases": [
          "CalcPad",
          "calcpad"
        ],
        "extensions": [
          ".cpd",
          ".cpdz"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "calcpad",
        "scopeName": "source.calcpad",
        "path": "./syntaxes/calcpad.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "CalcPad Light",
        "uiTheme": "vs",
        "path": "./themes/calcpad-light-theme.json"
      },
      {
        "label": "CalcPad Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/calcpad-dark-theme.json"
      }
    ],
    "commands": [
      {
        "command": "vscode-calcpad.activate",
        "title": "Activate CalcPad"
      },
      {
        "command": "vscode-calcpad.previewHtml",
        "title": "CalcPad Preview",
        "icon": "$(preview)"
      },
      {
        "command": "vscode-calcpad.showInsert",
        "title": "Show CalcPad Insert Panel",
        "icon": "$(add)"
      },
      {
        "command": "vscode-calcpad.exportToPdf",
        "title": "Export CalcPad to PDF",
        "icon": "$(file-pdf)"
      },
      {
        "command": "vscode-calcpad.previewUnwrapped",
        "title": "CalcPad Preview Unwrapped",
        "icon": "$(eye)"
      },
      {
        "command": "vscode-calcpad.printToPdf",
        "title": "Print CalcPad Preview to PDF",
        "icon": "$(file-pdf)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-calcpad.previewHtml",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        },
        {
          "command": "vscode-calcpad.showInsert",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        },
        {
          "command": "vscode-calcpad.exportToPdf",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        },
        {
          "command": "vscode-calcpad.previewUnwrapped",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        }
      ],
      "webview/context": [
        {
          "command": "vscode-calcpad.printToPdf",
          "when": "webviewId == htmlPreview || webviewId == htmlPreviewUnwrapped",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-calcpad.printToPdf",
          "when": "resourceLangId == calcpad || resourceLangId == plaintext",
          "group": "calcpad@1"
        }
      ]
    },
    "configuration": {
      "title": "CalcPad",
      "properties": {
        "calcpad.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:9420",
          "description": "Base URL for the CalcPad API server"
        },
        "calcpad.previewTheme": {
          "type": "string",
          "default": "system",
          "enum": [
            "light",
            "dark",
            "system"
          ],
          "enumDescriptions": [
            "Always use light theme for preview",
            "Always use dark theme for preview",
            "Follow VS Code theme (light/dark)"
          ],
          "description": "Theme to use for CalcPad preview"
        },
        "calcpad.settings": {
          "type": "object",
          "description": "CalcPad calculation and rendering settings",
          "default": {},
          "properties": {
            "math": {
              "type": "object",
              "properties": {
                "decimals": {
                  "type": "integer",
                  "default": 6,
                  "minimum": 0,
                  "maximum": 15
                },
                "degrees": {
                  "type": "integer",
                  "default": 0,
                  "enum": [
                    0,
                    1,
                    2
                  ]
                },
                "isComplex": {
                  "type": "boolean",
                  "default": false
                },
                "substitute": {
                  "type": "boolean",
                  "default": true
                },
                "formatEquations": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "plot": {
              "type": "object",
              "properties": {
                "colorScale": {
                  "type": "string",
                  "default": "Rainbow",
                  "enum": [
                    "Rainbow",
                    "Grayscale",
                    "Hot",
                    "Cool",
                    "Jet",
                    "Parula"
                  ]
                },
                "shadows": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "units": {
              "type": "string",
              "default": "m",
              "enum": [
                "m",
                "i",
                "u"
              ]
            },
            "output": {
              "type": "object",
              "properties": {
                "format": {
                  "type": "string",
                  "default": "html",
                  "enum": [
                    "html",
                    "pdf",
                    "docx"
                  ]
                },
                "silent": {
                  "type": "boolean",
                  "default": true
                }
              }
            }
          }
        }
      }
    },
    "views": {
      "calcpad-ui": [
        {
          "id": "calcpadVueUI",
          "name": "CalcPad",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "calcpad-ui",
          "title": "CalcPad",
          "icon": "./calcpad-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:vue && tsc -p ./",
    "watch": "concurrently \"npm run watch:vue\" \"tsc -watch -p ./\"",
    "build:vue": "vite build",
    "watch:vue": "vite build --watch",
    "dev:vue": "vite build --watch --mode development",
    "type-check:vue": "vue-tsc --noEmit --project tsconfig.vue.json"
  },
  "devDependencies": {
    "@types/node": "^20.19.16",
    "@types/vscode": "^1.74.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/compiler-sfc": "^3.5.21",
    "concurrently": "^9.2.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "vue-tsc": "^2.2.12"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "package.json": "^0.0.0",
    "vue": "^3.5.21"
  }
}
