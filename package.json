{
  "name": "vscode-calcpad",
  "displayName": "VS Code CalcPad",
  "description": "Calculator extension for VS Code",
  "version": "0.0.1",
  "publisher": "imartincei",
  "repository": "https://github.com/imartincei/vscode-calcpad",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:calcpad",
    "onCommand:vscode-calcpad.activate",
    "onCommand:vscode-calcpad.previewHtml",
    "onCommand:vscode-calcpad.showInsert",
    "onView:calcpadVueUI"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "calcpad",
        "aliases": [
          "CalcPad",
          "calcpad"
        ],
        "extensions": [
          ".cpd",
          ".cpdz"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "calcpad",
        "scopeName": "source.calcpad",
        "path": "./syntaxes/calcpad.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "CalcPad Light",
        "uiTheme": "vs",
        "path": "./themes/calcpad-light-theme.json"
      },
      {
        "label": "CalcPad Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/calcpad-dark-theme.json"
      }
    ],
    "commands": [
      {
        "command": "vscode-calcpad.activate",
        "title": "Activate CalcPad"
      },
      {
        "command": "vscode-calcpad.previewHtml",
        "title": "CalcPad Preview",
        "icon": "$(preview)"
      },
      {
        "command": "vscode-calcpad.showInsert",
        "title": "Show CalcPad Insert Panel",
        "icon": "$(add)"
      },
      {
        "command": "vscode-calcpad.exportToPdf",
        "title": "Export CalcPad to PDF",
        "icon": "$(file-pdf)"
      },
      {
        "command": "vscode-calcpad.previewUnwrapped",
        "title": "CalcPad Preview Unwrapped",
        "icon": "$(eye)"
      },
      {
        "command": "vscode-calcpad.printToPdf",
        "title": "Print CalcPad Preview to PDF",
        "icon": "$(file-pdf)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vscode-calcpad.previewHtml",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        },
        {
          "command": "vscode-calcpad.showInsert",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        },
        {
          "command": "vscode-calcpad.exportToPdf",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        },
        {
          "command": "vscode-calcpad.previewUnwrapped",
          "when": "resourceLangId == plaintext || resourceLangId == calcpad",
          "group": "navigation"
        }
      ],
      "webview/context": [
        {
          "command": "vscode-calcpad.printToPdf",
          "when": "webviewId == htmlPreview || webviewId == htmlPreviewUnwrapped",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-calcpad.printToPdf",
          "when": "resourceLangId == calcpad || resourceLangId == plaintext",
          "group": "calcpad@1"
        }
      ]
    },
    "configuration": {
      "title": "CalcPad",
      "properties": {
        "calcpad.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:9420",
          "description": "Base URL for the CalcPad API server"
        },
        "calcpad.previewTheme": {
          "type": "string",
          "default": "system",
          "enum": [
            "light",
            "dark",
            "system"
          ],
          "enumDescriptions": [
            "Always use light theme for preview",
            "Always use dark theme for preview",
            "Follow VS Code theme (light/dark)"
          ],
          "description": "Theme to use for CalcPad preview"
        },
        "calcpad.enableQuickTyping": {
          "type": "boolean",
          "default": true,
          "description": "Enable quick typing shortcuts (e.g., ~a → α, ~' → ′). Works everywhere including comments."
        },
        "calcpad.settings": {
          "type": "object",
          "description": "CalcPad calculation and rendering settings",
          "default": {},
          "properties": {
            "math": {
              "type": "object",
              "properties": {
                "decimals": {
                  "type": "integer",
                  "default": 6,
                  "minimum": 0,
                  "maximum": 15
                },
                "degrees": {
                  "type": "integer",
                  "default": 0,
                  "enum": [
                    0,
                    1,
                    2
                  ]
                },
                "isComplex": {
                  "type": "boolean",
                  "default": false
                },
                "substitute": {
                  "type": "boolean",
                  "default": true
                },
                "formatEquations": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "plot": {
              "type": "object",
              "properties": {
                "colorScale": {
                  "type": "string",
                  "default": "Rainbow",
                  "enum": [
                    "Rainbow",
                    "Grayscale",
                    "Hot",
                    "Cool",
                    "Jet",
                    "Parula"
                  ]
                },
                "shadows": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "units": {
              "type": "string",
              "default": "m",
              "enum": [
                "m",
                "i",
                "u"
              ]
            },
            "output": {
              "type": "object",
              "properties": {
                "format": {
                  "type": "string",
                  "default": "html",
                  "enum": [
                    "html",
                    "pdf",
                    "docx"
                  ]
                },
                "silent": {
                  "type": "boolean",
                  "default": true
                }
              }
            }
          }
        },
        "calcpad.s3.apiUrl": {
          "type": "string",
          "default": "http://localhost:5000",
          "description": "Base URL for the CalcPad S3 API server"
        },
        "calcpad.routing.config": {
          "type": "object",
          "description": "Routing configuration for different API endpoints",
          "default": {
            "s3": {
              "BaseUrl": "http://localhost:5000",
              "Auth": "jwt",
              "Endpoints": {
                "download": "/api/blobstorage/download/:fileName",
                "upload": "/api/blobstorage/upload/:fileName",
                "list": "/api/blobstorage/list"
              }
            },
            "github": {
              "BaseUrl": "https://api.github.com",
              "Auth": "jwt",
              "Endpoints": {
                "raw_file": "/repos/:owner/:repo/contents/:fileName",
                "download": "/repos/:owner/:repo/zipball/:ref"
              }
            },
            "public_api": {
              "BaseUrl": "https://api.example.com",
              "Auth": "public",
              "Endpoints": {
                "data": "/v1/data/:fileName",
                "export": "/v1/export/:fileName.csv"
              }
            },
            "internal": {
              "BaseUrl": "https://internal-api.company.com",
              "Auth": "jwt",
              "Endpoints": {
                "reports": "/api/reports/:fileName",
                "templates": "/api/templates/:fileName.cpd"
              }
            }
          }
        }
      }
    },
    "views": {
      "calcpad-ui": [
        {
          "id": "calcpadVueUI",
          "name": "CalcPad",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "calcpad-ui",
          "title": "CalcPad",
          "icon": "./calcpad-icon.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run build:vue && webpack",
    "watch": "concurrently \"npm run watch:vue\" \"webpack --watch\"",
    "package": "npm run build:vue && webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "build:vue": "vite build",
    "watch:vue": "vite build --watch",
    "dev:vue": "vite build --watch --mode development",
    "type-check:vue": "vue-tsc --noEmit --project tsconfig.vue.json"
  },
  "devDependencies": {
    "@types/node": "^20.19.16",
    "@types/vscode": "^1.74.0",
    "@types/webpack": "^5.28.5",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/compiler-sfc": "^3.5.21",
    "concurrently": "^9.2.1",
    "terser": "^5.44.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "vue-tsc": "^2.2.12",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "package.json": "^0.0.0",
    "vue": "^3.5.21"
  }
}
